        // SignalR Connection v√† Order Management
        let currentOrderData = null;
        
        function initializeSignalR() {
            if (typeof signalR === 'undefined') {
                console.error("SignalR library not loaded!");
                setTimeout(initializeSignalR, 1000); // Retry after 1 second
                return;
            }

            const connection = new signalR.HubConnectionBuilder()
                .withUrl("/orderHub")
                .withAutomaticReconnect()
                .configureLogging(signalR.LogLevel.Information)
                .build();

            connection.start().then(function () {
                console.log("‚úÖ SignalR connection started for QuanLyPhong");
                // Join group QuanLyPhong
                connection.invoke("JoinQuanLyPhongGroup").then(function() {
                    console.log("‚úÖ Successfully joined QuanLyPhong group");
                }).catch(function (err) {
                    console.error("‚ùå Error joining QuanLyPhong group: ", err);
                });
            }).catch(function (err) {
                console.error("‚ùå SignalR connection error: ", err);
                setTimeout(initializeSignalR, 2000); // Retry after 2 seconds
            });

            // Nh·∫≠n th√¥ng b√°o ƒë·∫∑t m√≥n
            connection.on("ReceiveOrderNotification", function (phongId, tenSanPham, soLuong, tenPhong, gia, sanPhamId, thongBao) {
                console.log("üîî Received order notification:", {
                    phongId, tenSanPham, soLuong, tenPhong, gia, sanPhamId, thongBao
                });
                showOrderNotification(phongId, tenSanPham, soLuong, tenPhong, gia, sanPhamId);
                playNotificationSound();
                speakVietnamese(thongBao); // ƒê·ªçc th√¥ng b√°o b·∫±ng ti·∫øng Vi·ªát AI
            });

            // Nh·∫≠n x√°c nh·∫≠n ƒë∆°n h√†ng
            connection.on("OrderConfirmed", function (phongId, sanPhamId, soLuong, tenPhong) {
                console.log(`ƒê∆°n h√†ng t·ª´ ph√≤ng ${tenPhong} ƒë√£ ƒë∆∞·ª£c x√°c nh·∫≠n`);
                // C√≥ th·ªÉ th√™m th√¥ng b√°o ho·∫∑c c·∫≠p nh·∫≠t UI ·ªü ƒë√¢y
                renderRooms(); // C·∫≠p nh·∫≠t l·∫°i danh s√°ch ph√≤ng
            });

            window.orderConnection = connection;
        }

        function testSignalR() {
            console.log("üß™ Testing SignalR connection...");
            if (window.orderConnection && window.orderConnection.state === signalR.HubConnectionState.Connected) {
                console.log("‚úÖ SignalR is connected");
