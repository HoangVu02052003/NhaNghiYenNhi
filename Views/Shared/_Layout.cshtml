    <!-- AOS -->
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    
    <!-- Moment.js -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/locale/vi.js"></script>
    
    <!-- Bootstrap Datepicker -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/locales/bootstrap-datepicker.vi.min.js"></script>

    <!-- Toastr JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    
    <!-- Custom JS -->
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        // Global function to show/hide loading
        window.showLoading = function() {
            const loadingOverlay = document.querySelector('.loading-overlay');
            if (loadingOverlay) {
                loadingOverlay.style.display = 'flex';
                loadingOverlay.style.opacity = '1';
            }
        };

        window.hideLoading = function() {
            const loadingOverlay = document.querySelector('.loading-overlay');
            if (loadingOverlay) {
                loadingOverlay.style.opacity = '0';
                setTimeout(() => {
                    loadingOverlay.style.display = 'none';
                }, 500);
            }
        };

        // Global modal configuration
        document.addEventListener('DOMContentLoaded', function() {
            // Configure toastr
            toastr.options = {
                closeButton: true,
                progressBar: true,
                positionClass: "toast-top-right",
                timeOut: 5000
            };

            // Initialize Bootstrap modals
            const initializeModal = function(modalElement) {
                if (!modalElement) return null;

                // Dispose existing modal instance if any
                let existingModal = bootstrap.Modal.getInstance(modalElement);
                if (existingModal) {
                    existingModal.dispose();
                }

                // Remove any existing backdrop
                document.querySelectorAll('.modal-backdrop').forEach(backdrop => backdrop.remove());

                // Initialize new modal
                const modalInstance = new bootstrap.Modal(modalElement, {
                    backdrop: false,
                    keyboard: false
                });

                // Add event listeners
                const handleOutsideClick = function(event) {
                    if (modalElement.classList.contains('show') && 
                        !modalElement.contains(event.target) && 
                        event.target.closest('.modal') === null) {
                        modalInstance.hide();
                    }
                };

                const handleEscapeKey = function(event) {
                    if (event.key === 'Escape' && modalElement.classList.contains('show')) {
                        modalInstance.hide();
                    }
                };

                // Cleanup when modal is hidden
                modalElement.addEventListener('hidden.bs.modal', function () {
                    document.body.classList.remove('modal-open');
                    document.body.style.overflow = '';
                    document.body.style.paddingRight = '';
                    document.removeEventListener('click', handleOutsideClick);
                    document.removeEventListener('keydown', handleEscapeKey);
                });

                // Setup when modal is shown
                modalElement.addEventListener('show.bs.modal', function () {
                    document.body.classList.add('modal-open');
                    document.body.style.overflow = 'hidden';
                    document.addEventListener('click', handleOutsideClick);
                    document.addEventListener('keydown', handleEscapeKey);
                });

                return modalInstance;
            };

            // Make initializeModal available globally
            window.initializeModal = initializeModal;

            // Initialize all existing modals
            document.querySelectorAll('.modal').forEach(modalElement => {
                initializeModal(modalElement);
            });

            // Create a MutationObserver to handle dynamically added modals
            const observer = new MutationObserver(function(mutations) {
                mutations.forEach(function(mutation) {
                    mutation.addedNodes.forEach(function(node) {
                        if (node.nodeType === 1 && node.classList.contains('modal')) {
                            initializeModal(node);
                        }
                    });
                });
            });

            observer.observe(document.body, {
                childList: true,
                subtree: true
            });
        });

        // Hide loading overlay when page loads
        window.addEventListener('load', hideLoading);
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
