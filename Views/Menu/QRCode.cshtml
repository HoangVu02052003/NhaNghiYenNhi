@section Scripts {
    <!-- QR Code Generator v·ªõi fallback -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/qrcode/1.5.3/qrcode.min.js" 
            onerror="loadBackupQRCode()"></script>
    
    <script>
        // Backup loader n·∫øu CDN ch√≠nh kh√¥ng ho·∫°t ƒë·ªông
        function loadBackupQRCode() {
            const script = document.createElement('script');
            script.src = 'https://unpkg.com/qrcode@1.5.3/build/qrcode.min.js';
            script.onload = function() {
                console.log('QRCode library loaded from backup CDN');
                initQRCode();
            };
            script.onerror = function() {
                console.log('Both CDNs failed, using online service');
                initQRCode();
            };
            document.head.appendChild(script);
        }
    </script>
    
    <script>
        function initQRCode() {
            const qrCodeDiv = document.getElementById('qrcode');
            const url = '@ViewBag.MenuUrl';
            
            if (typeof QRCode !== 'undefined') {
                // T·∫°o QR Code
                QRCode.toCanvas(url, {
                    width: 300,
                    height: 300,
                    margin: 2,
                    color: {
                        dark: '#000000',
                        light: '#FFFFFF'
                    }
                }, function (err, canvas) {
                    if (err) {
                        console.error(err);
                        qrCodeDiv.innerHTML = '<div class="alert alert-danger">Kh√¥ng th·ªÉ t·∫°o QR Code</div>';
                    } else {
                        canvas.style.border = '2px solid #ddd';
                        canvas.style.borderRadius = '10px';
                        qrCodeDiv.appendChild(canvas);
                        
                        // L∆∞u canvas ƒë·ªÉ download
                        window.qrCanvas = canvas;
                    }
                });
            } else {
                // Fallback: Hi·ªÉn th·ªã URL d·∫°ng text v√† s·ª≠ d·ª•ng service online
                qrCodeDiv.innerHTML = `
                    <div class="text-center">
                        <p class="text-warning">ƒêang t·∫£i th∆∞ vi·ªán QR Code...</p>
                        <img src="https://api.qrserver.com/v1/create-qr-code/?size=300x300&data=${encodeURIComponent(url)}" 
                             alt="QR Code" class="img-fluid" style="border: 2px solid #ddd; border-radius: 10px;">
                        <p class="mt-2"><small>QR Code ƒë∆∞·ª£c t·∫°o b·ªüi d·ªãch v·ª• online</small></p>
                    </div>
                `;
            }
        }
        
        // Th·ª≠ load QR code khi trang s·∫µn s√†ng
        document.addEventListener('DOMContentLoaded', function() {
            // ƒê·ª£i m·ªôt ch√∫t ƒë·ªÉ ƒë·∫£m b·∫£o script ƒë√£ load ho·∫∑c timeout
            let attempts = 0;
            const maxAttempts = 10;
            
            function tryInitQRCode() {
                attempts++;
                if (typeof QRCode !== 'undefined') {
                    initQRCode();
                } else if (attempts < maxAttempts) {
                    setTimeout(tryInitQRCode, 200);
                } else {
                    console.log('QRCode library failed to load, using fallback');
                    initQRCode();
                }
            }
            
            tryInitQRCode();
        });
        
        function downloadQR() {
            if (window.qrCanvas) {
                // Download t·ª´ canvas t·ª± t·∫°o
                const link = document.createElement('a');
                link.download = 'menu-qr-@(ViewBag.TenPhong).png';
                link.href = window.qrCanvas.toDataURL();
                link.click();
            } else {
                // Download t·ª´ service online
                const url = '@ViewBag.MenuUrl';
                const qrUrl = `https://api.qrserver.com/v1/create-qr-code/?size=300x300&data=${encodeURIComponent(url)}`;
                const link = document.createElement('a');
                link.download = 'menu-qr-@(ViewBag.TenPhong).png';
                link.href = qrUrl;
                link.target = '_blank';
                link.click();
            }
        }
    </script>
} 